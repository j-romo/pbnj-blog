---
// ./src/layouts/Layout.astro
import { VisualEditing } from "@sanity/astro/visual-editing";

export type props = {
  title: string
}

const {title} = Astro.props
const visualEditingEnabled =
  import.meta.env.PUBLIC_SANITY_VISUAL_EDITING_ENABLED === "true";

console.log("Visual Editing Enabled:", import.meta.env.PUBLIC_SANITY_VISUAL_EDITING_ENABLED);
console.log("Sanity Project ID:", import.meta.env.PUBLIC_SANITY_PROJECT_ID);
console.log("Sanity Dataset:", import.meta.env.PUBLIC_SANITY_DATASET);
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
  </head>
  <body>
    <slot />
    <VisualEditing enabled={visualEditingEnabled} zIndex={1000}/>
  </body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

